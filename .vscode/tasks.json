{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Debug Gmail Automation",
            "type": "shell",
            "command": "\"C:/Users/Wesley Allegre/source/repos/GitHub/gmail_automation/.venv/Scripts/python.exe\"",
            "args": [
                "-m",
                "debugpy",
                "--listen",
                "5678",
                "--wait-for-client",
                "gmail_automation.py"
            ],
            "group": "test",
            "isBackground": false,
            "problemMatcher": []
        },
        {
            "label": "Create GitHub Issues",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/scripts/create_issues.sh"
            ],
